doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(property="og:title" content='Nintendb')
    meta(property="og:description" content='닌텐도 스위치 커뮤니티 게시글')
    meta(property="og:image" content='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS1ZWevkWyUNWJjAq1D7eSZk58eDunIPi4rbA&usqp=CAU')
    title Nintendb - All about Nintendo Switch
    link(rel='icon' href='../../static/img/favicon.ico' type='image/x-icon')
    link(href='/src/css/style.css' rel='stylesheet')
    link(href='/src/css/forum.css' rel='stylesheet')
  body
    #nav
      a(href='/home')
        img(src='../../static/img/logo.png')
      ul
        li
          a(href='/home') 홈
        li
          a(href='/title') 게임
        li
          a#current(href='/forum?sort=date') 커뮤니티
        li
          a(href='/private') MY
        li
          a(href='/etc') 고객지원
      if status
        a#login(href='/logout') 로그아웃
      else
        a#login(href='/login') 로그인/회원가입
    img#banner(src='../../static/img/banner.jpg' width='100%')
    #contents
      #board
        h1 글 수정하기
        form(action=`/forum/update/${post.id}` name='posting' method='post')
          input(type='text' name='title' placeholder='제목' value=post.title)
          if status && checkMyPost 
            input(type='hidden' name='user_id' value=post.user_id)
          else 
            input(type='text' name='nickname' placeholder='아이디' value=post.nickname)
            input(type='password' name='password' placeholder='비밀번호')
          textarea(name='text' placeholder='내용' cols='100' rows='10')=post.text
          button 등록
    #to-top
      | 🔝
    script(type='module' src='src/js/scroll.js')
    