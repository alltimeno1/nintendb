doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(property="og:title" content='Nintendb')
    meta(property="og:description" content='닌텐도 스위치 게임 한눈에 보기')
    meta(property="og:image" content='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS1ZWevkWyUNWJjAq1D7eSZk58eDunIPi4rbA&usqp=CAU')
    title Nintendb - All about Nintendo Switch
    link(rel='icon' href='../../static/img/favicon.ico' type='image/x-icon')
    link(href='src/css/style.css' rel='stylesheet')
    link(href='src/css/title.css' rel='stylesheet')
  body
    #nav
      a(href='/home')
        img(src='../../static/img/logo.png' height='100px')
      ul
        li
          a(href='/home') 홈
        li
          a#current(href='/title') 게임
        li
          a(href='/forum') 커뮤니티
        li
          a(href='/private') MY
        li
          a(href='/etc') 고객지원
      a#login(href=status[0])=status[1]
    img#banner(src='../../static/img/banner.jpg' width='100%')
    #container
      #container2
        .filter
          .checkboxes
            .checkbox.lang
              p.checkbox_tit 대응 언어
              ul.clearfix
                each item in [['한국어', 'langKR'], ['영어', 'langUS'], ['일본어', 'langJP']]
                  li
                    input.input_chk(type='checkbox' value=item[0] id=item[1])
                    label(for=item[1])
                      span.input_box
                      = ' ' + item[0]
            .checkbox.play_type
              p.checkbox_tit 플레이 인원
              ul.clearfix
                each item in [['싱글', 'single'], ['멀티', 'multi']]
                  li
                    input.input_chk(type='checkbox' value=item[0] id=item[1])
                    label(for=item[1])
                      span.input_box
                      = ' ' + item[0]
            .checkbox.genre
              p.checkbox_tit 장르
              ul.clearfix
                each item in [['RPG', 'rpg'], ['액션', 'action'], ['어드벤처', 'adventure'], ['FPS', 'fps'], ['시뮬레이션', 'simulation'], ['스포츠', 'sports']]
                  li
                    input.input_chk(type='checkbox' value=item[0] id=item[1])
                    label(for=item[1])
                      span.input_box
                      = ' ' + item[0]
          li.search_box
            input(type='text' maxlength='225' placeholder='검색')
        .popular
          h2 인기 검색어
          ol.top10
            each item in title
              li.keyword
                a(href=`/title/${item.name}`)=item.name
        ul.gamelists
          each item in title
            li.gamelist
              a(href=`/title/${item.name}`)
                img.gl-img(src=item.image height='240' width='240')
              .gl-info
                .header
                  h2.gl-title
                    a(href=`/title/${item.name}`)=item.name
                  p.gl-date=`${new Date(item.date).toLocaleDateString('ko-KR')} 출시`
                ul.tags
                  li.tag
                    each desc in item.tag.split(', ')
                      a(href='#')=`#${desc}\n`
                .stats
                  img(src='../static/img/metacritic.png' width='20' height='20')
                  span.rating=item.rating !== 0 ? item.rating : 'TBD'
                  span.price=item.price.toLocaleString('ko-KR', { style: 'currency', currency: 'KRW' })
    #to-top
      | 🔝
    script(type='module' src='src/js/scroll.js')
    script(type='module' src='src/js/search_title.js')
    script(type='module' src='src/js/fadeIn.js')